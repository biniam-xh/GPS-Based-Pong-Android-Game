<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <fragment
        android:layout_width="match_parent"
        android:id="@+id/map"
        tools:context="com.biniam.android.gpsbasedpongandroidgame.ThirdActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="NAVIGATE TO PONG GAME"
        android:id="@+id/navigateButton2"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_marginBottom="20dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal|top"
        android:onClick="navigateToMap2" />

</RelativeLayout>