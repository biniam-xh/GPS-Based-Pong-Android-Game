<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.biniam.android.gpsbasedpongandroidgame.FifthActivity"
    android:padding="0dp">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/fourthBg"
        android:layout_alignParentStart="true"
        android:src="@drawable/bg1"
        android:layout_alignParentEnd="true"
        android:scaleType="centerCrop"
        android:background="@color/background_floating_material_dark" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="DIFFICULTY LEVELS"
        android:id="@+id/pongGameText2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp"
        android:textSize="30dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="AMATEUR MODE"
        android:id="@+id/amateurModeButton"
        android:layout_below="@+id/pongGameText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:layout_alignParentEnd="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:onClick="selectAmateurMode" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="PROFESSIONAL"
        android:id="@+id/professionalModeButton"
        android:layout_below="@+id/amateurModeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:onClick="selectProfessionalMode" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="WORLD CLASS"
        android:id="@+id/worldClassModeButton"
        android:layout_below="@+id/professionalModeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_alignParentEnd="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:onClick="selectWorldClassMode" />
</RelativeLayout>
