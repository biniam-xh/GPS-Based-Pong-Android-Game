<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.biniam.android.gpsbasedpongandroidgame.ThirdActivity">

    <fragment
        android:layout_width="match_parent"
        android:id="@+id/map"
        tools:context="com.biniam.android.gpsbasedpongandroidgame.ThirdActivity"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_height="match_parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=" FIX THE UPPER LEFT CORNER OF THE PLAYGROUND"
        android:id="@+id/upperLeftButton"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/upperRightButton"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal|top"
        android:onClick="fixUpperLeftCorner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="FIX THE UPPER RIGHT CORNER OF THE PLAYGROUND"
        android:id="@+id/upperRightButton"
        android:layout_above="@+id/lowerRightButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal|top"
        android:onClick="fixUpperRightCorner"
        android:enabled="false" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="FIX THE LOWER RIGHT CORNER OF THE PLAYGROUND"
        android:id="@+id/lowerRightButton"
        android:layout_above="@+id/lowerLeftButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal|top"
        android:onClick="fixLowerRightCorner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text=" FIX THE LOWER LEFT CORNER OF THE PLAYGROUND"
        android:id="@+id/lowerLeftButton"
        android:layout_above="@+id/navigateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentEnd="false"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:textSize="12dp"
        android:layout_gravity="center_horizontal|top"
        android:onClick="fixLowerLeftCorner" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:text="NAVIGATE TO PONG GAME"
        android:id="@+id/navigateButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:theme="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textStyle="bold"
        android:background="#2196f3"
        android:textColor="@android:color/white"
        android:layout_gravity="center_horizontal|top"
        android:onClick="navigateToMap" />


</RelativeLayout>